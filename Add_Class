    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        // TODO add your handling code here:
        try{
            String sql ="insert into Class (CLA_Class_Name, CLA_EdpCode, CLA_Schedule) values (?,?,?)";
            
            pst=conn.prepareStatement(sql);
            pst.setString(1, jTextField_ClassName.getText());
            pst.setString(2, jTextField_EDP.getText());
            pst.setString(3, jTextField_Sched.getText());
            
            
            pst.execute();
            JOptionPane.showMessageDialog(null,"Saved successfully");
            
            
            }
        
            catch(Exception e)
            {
                JOptionPane.showMessageDialog(null, e);
            }
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        // TODO add your handling code here:
        jTextField_ClassName.setText("");
        jTextField_EDP.setText("");
        jTextField_Sched.setText("");
        jTextField_EdpSearch.setText("");
        DefaultTableModel model = (DefaultTableModel) jTable_Result.getModel();
        model.setRowCount(0);
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jTextField_EdpSearchKeyReleased(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jTextField_EdpSearchKeyReleased
        // TODO add your handling code here:
        String tf = jTextField_EdpSearch.getText();
        try{
            String query = "SELECT * FROM Class WHERE CLA_EdpCode LIKE '%"+tf+"%'";
            pst=conn.prepareStatement(query);
            rs=pst.executeQuery();
            jTable_Result.setModel(DbUtils.resultSetToTableModel(rs));
            
            
        }
        catch (Exception e) {
        
            JOptionPane.showMessageDialog(null, e);
    }//GEN-LAST:event_jTextField_EdpSearchKeyReleased

        finally {
            try{
                if(pst!=null){
                    rs.close();
                    pst.close();
                }
            }
            catch(Exception e){
                
            }
        }
    
    }
